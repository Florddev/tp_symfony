        {{ form_row(form.created_at, {'attr': {'class': 'hidden'}}) }}
        {{ form_row(form.updated_at, {'attr': {'class': 'hidden'}}) }}
    </div>
</div>

<div class="flex justify-end">
    <a href="{{ path('app_place_index') }}" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
        Annuler
    </a>
    <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
        {{ button_label|default('Enregistrer') }}
    </button>
</div>
{{ form_end(form) }}