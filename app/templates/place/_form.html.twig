        <div class="col-span-1">
            {{ form_label(form.name, 'Nom du lieu', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.name, {'attr': {
                'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm',
                'placeholder': 'Nom du lieu'
            }}) }}
            {{ form_errors(form.name, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
        </div>

        <div class="col-span-1">
            {{ form_label(form.capacity, 'Capacité', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.capacity, {'attr': {
                'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm',
                'placeholder': 'Nombre de personnes'
            }}) }}
            {{ form_errors(form.capacity, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
        </div>

        <div class="col-span-2">
            {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.adresse, {'attr': {
                'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm',
                'placeholder': 'Adresse complète'
            }}) }}
            {{ form_errors(form.adresse, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
        </div>

        <div class="col-span-1">
            {{ form_label(form.city, 'Ville', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.city, {'attr': {
                'class': 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm',
                'placeholder': 'Ville'
            }}) }}
            {{ form_errors(form.city, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
        </div>

        <div class="col-span-1">
            {{ form_label(form.postal_code, 'Code postal', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
